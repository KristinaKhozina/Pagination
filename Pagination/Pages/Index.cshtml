@page
@model IndexModel
@{
    ViewData["Title"] = "Index";
}

<nav aria-label="Page navigation">
    <ul class="pagination pagination-lg justify-content-center">
        <li class="page-item">
            <a class="page-link" href="?pageIndex=1" aria-label="First">
                <span>&lt;&lt;</span>
            </a>
        </li>
        <li class="page-item">
            <a class="page-link" aria-label="Previous"
               href="?pageIndex=@Model.PreviousPageIndex">
                <span>&lt;</span>
            </a>
        </li>
        @{
            foreach (var num in Model.PageNumbers)
            {
                if (num == 0)
                {
                    <li class="page-item disabled">
                        <a class="page-link">...</a>
                    </li>
                }
                else
                {
                    <li class="page-item @(Model.PageIndex == num ? "disabled" : "" )">
                        <a class="page-link" href="?pageIndex=@num">@num</a>
                    </li>
                }
            }
        }
        <li class="page-item">
            <a class="page-link" aria-label="Next"
               href="?pageIndex=@Model.NextPageIndex">
                <span>&gt;</span>
            </a>
        </li>
        <li class="page-item">
            <a class="page-link" href="?pageIndex=@Model.Count" aria-label="Last">
                <span>&gt;&gt;</span>
            </a>
        </li>
    </ul>
</nav>